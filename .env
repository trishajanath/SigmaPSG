# MongoDB connection string.
# Replace with your actual credentials in your local .env file.
MONGODB_URI="mongodb://your_user:your_password@mongo:27017/your_database"

# A strong, randomly generated secret key for session management, signing, etc.
# Generate a new key for your .env file using a command like: `openssl rand -hex 32`
SECRET_KEY="replace_with_a_strong_random_32_character_hex_key_in_your_env_file"
